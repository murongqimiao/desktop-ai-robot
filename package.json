{
  "name": "desktop-pet",
  "version": "1.0.0",
  "description": "一个基于 Electron 的桌面宠物机器人",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "concurrently -n \"ASR,TTS,Electron\" -c \"cyan,magenta,yellow\" \"npm run asr:start\" \"npm run tts:start\" \"npm run electron:dev\"",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build",
    "electron:preview": "electron-vite preview",
    "asr:start": "venv/bin/python python/start_asr.py",
    "tts:start": "venv/bin/python python/start_tts.py",
    "build": "npm run electron:build"
  },
  "keywords": [
    "electron",
    "desktop-pet",
    "robot",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-vite": "^2.1.1",
    "concurrently": "^8.2.2",
    "@vitejs/plugin-vue": "^5.0.4"
  }
}
